<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sirfireys.rana.noidainternationaluniversity.ClassList">

    <ProgressBar
        android:id="@+id/progressbar_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="Checking available Notes packages"
        android:gravity="center"
        android:textColor="@color/niu_green"
        android:layout_height="wrap_content" />


   <ListView
       android:id="@+id/listview_classes"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="gone"
       android:paddingRight="5sp"
       android:paddingTop="5sp"
       android:paddingBottom="5sp"
       android:paddingLeft="5sp"
       />

</RelativeLayout>
